@model IEnumerable<PatientCard.Model.Models.Patient>

@{
    ViewBag.Title = "Index";
}

@if (ViewBag.Iin != null)
{
    <h2>Список пациентов с ИИН = "@ViewBag.Iin"</h2>
}
else if (ViewBag.Name != null)
{
    <h2>Список пациентов с ФИО = "@ViewBag.Name"</h2>
}
else
{
    <h2>Список пациентов</h2>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Iin)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iin)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Записаться на прием", "Signup", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@if ((ViewBag.Iin != null) || (ViewBag.Name != null))
{
    @Html.ActionLink("Полный список пациентов", "Index")
}
